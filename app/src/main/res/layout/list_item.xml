<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageItem"
        android:layout_width="159dp"
        android:layout_height="139dp"
        android:layout_marginStart="16dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/titleItem"
        android:layout_width="113dp"
        android:layout_height="32dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="80dp"
        android:text="TextView"
        android:textSize="22dp"
        app:layout_constraintEnd_toStartOf="@+id/costItem"
        app:layout_constraintHorizontal_bias="0.463"
        app:layout_constraintStart_toEndOf="@+id/imageItem"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/costItem"
        android:layout_width="109dp"
        android:layout_height="26dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dateItem"
        android:layout_width="110dp"
        android:layout_height="23dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="64dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/titleItem"
        app:layout_constraintTop_toBottomOf="@+id/costItem" />

</androidx.constraintlayout.widget.ConstraintLayout>